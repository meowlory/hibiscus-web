generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Plant {
  id          Int      @id @default(autoincrement())
  name        String   @db.VarChar(255)
  description String?  @db.Text
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt   DateTime @updatedAt @map("updated_at") @db.Timestamptz(3)
  blooms      Bloom[]

  @@index([createdAt(sort: Desc)])
  @@map("plants")
}

model Bloom {
  id         Int      @id @default(autoincrement())
  url        String   @db.Text
  pathname   String   @unique @db.VarChar(500)
  uploadedAt DateTime @default(now()) @map("uploaded_at") @db.Timestamptz(3)
  plantId    Int?     @map("plant_id")
  plant      Plant?   @relation(fields: [plantId], references: [id], onDelete: SetNull)
  createdAt  DateTime @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt  DateTime @updatedAt @map("updated_at") @db.Timestamptz(3)

  @@index([plantId])
  @@index([uploadedAt(sort: Desc)])
  @@map("blooms")
}
